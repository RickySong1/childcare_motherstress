<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#1a1a1a" />
            <gradient
                android:angle="225"
                android:endColor="#dddcdcdc"
                android:startColor="#ddf1efef" />
        </shape>

    </item>
    <item>
        <rotate
            android:fromDegrees="45">
            <shape
                android:shape="line">
                <stroke
                    android:color="#FF0000"
                    android:width="3dp">

                </stroke>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="135">
            <shape
                android:shape="line">
                <stroke
                    android:color="#FF0000"
                    android:width="3dp">
                </stroke>
            </shape>
        </rotate>
    </item>


</layer-list>